# API Server
PORT=8000
HOSTNAME=localhost
IDLE_TIMEOUT=60

# Clickhouse Database
URL=http://127.0.0.1:8123
USERNAME=default
PASSWORD=
MAX_LIMIT=10000

# Database Configuration
# Option 1: Use YAML config file (recommended for multi-cluster setups)
DBS_CONFIG_PATH=dbs-config.yaml

# Option 2: Use environment variables (for single-cluster setups)
DBS_BALANCES=mainnet:evm-balances@v0.2.2;base:evm-balances@v0.2.2;solana:svm-tokens@v0.2.7
DBS_TRANSFERS=mainnet:evm-transfers@v0.2.2;base:evm-transfers@v0.2.2;solana:svm-tokens@v0.2.7
DBS_NFT=mainnet:evm-nft-tokens@v0.6.2;base:evm-nft-tokens@v0.6.2
DBS_DEX=mainnet:evm-dex@v0.2.7;base:evm-dex@v0.2.7;solana:svm-dex@v0.2.7
DBS_CONTRACT=mainnet:evm-contracts@v0.3.0;base:evm-contracts@v0.3.0

# Spam API
# See https://github.com/semiotic-ai/nft-api
SPAM_API_URL=https://localhost:3000
REDIS_URL=redis://localhost:6379

# OpenAPI
DISABLE_OPENAPI_SERVERS=false

# Logging
PRETTY_LOGGING=true
VERBOSE=true
